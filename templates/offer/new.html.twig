                            <div class="input-field">
                                         {{form_row(form.location)}}
                            </div>
                            <div class="input-field">
                                           {{form_row(form.dateCreated)}}
                            </div>
                            <div class="input-field">
                                         {{form_row(form.dateClosing)}}
                            </div>
                            <div class="input-field">
